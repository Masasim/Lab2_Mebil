@model Lab2_Mebil.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<div class="container">
    <h2>Create New Customer</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="address" class="control-label"></label>
            <input asp-for="address" class="form-control" />
            <span asp-validation-for="address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="bankDetails" class="control-label"></label>
            <input asp-for="bankDetails" class="form-control" />
            <span asp-validation-for="bankDetails" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}